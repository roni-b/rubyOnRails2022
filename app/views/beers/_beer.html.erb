<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%=link_to beer.name, beer %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%=link_to beer.brewery.name, beer.brewery %>
  </p>
  <% if beer.ratings.empty? %>
   beer has not yet been rated!
  <% else %>
   <p>Beer has <%=beer.ratings.count%> <%="rating".pluralize(beer.ratings.count)%> with an average of 
   <%=beer.average_rating%></p>
  <% end %>
  
</div>
