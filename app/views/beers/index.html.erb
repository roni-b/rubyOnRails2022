<h1>Beers</h1>
<table class="table table-hover">
  <tr>
    <th>Beer</th>
    <th>Style</th>
    <th>Brewery</th>
    <th>Rating</th>
  </tr>
  <% @beers.each do |beer| %>
  <tr>
    <td><%= link_to beer.name, beer %></td>
    <td><%= link_to beer.style.name, beer.style.name %></td>
    <td><%= link_to beer.brewery.name, beer.brewery %></td>
    <% if beer.average_rating %>
    <td><%= link_to beer.average_rating %></td>
    <% else %>
    <td></td>
    <% end %>
  </tr>
  <% end %>
    

</table>
<%= link_to('New Beer', new_beer_path) if current_user %>
