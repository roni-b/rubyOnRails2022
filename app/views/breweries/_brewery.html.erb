<div id="<%= dom_id brewery %>">
<h2><%=brewery.name%></h2>
  <p>
  Established in: <%=brewery.year%>
  </p>
  <p>Beers count: <%=@brewery.beers.count %></p>
  <p>
  <% brewery.beers.each do |beer| %>
  <%= link_to beer.name, beer %>
  <% end %>
  </p>
  <% if brewery.ratings.empty? %>
  <% else %>
  <p> Brewery has <%= brewery.ratings.count %> <%="rating".pluralize(brewery.ratings.count)%> with an average of <%= brewery.average_rating.round(1) %></p>
  <% end %>

</div>

